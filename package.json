{
  "name": "monopack",
  "version": "0.0.1",
  "description": "A JavaScript bundler for node.js monorepo applications",
  "repository": "https://github.com/flegall/monopack.git",
  "author": "Florent Le Gall <florent.legall@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "chalk": "^2.3.1",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.66.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.0",
    "micromatch": "^3.1.8",
    "mkdirp": "^0.5.1",
    "prettier": "^1.10.2",
    "string-length": "^2.0.0"
  },
  "scripts": {
    "postinstall": "yarn build",
    "build": "node scripts/build.js",
    "watch": "node scripts/watch.js",
    "test": "echo 'OK'",
    "eslint": "eslint . --cache",
    "format":
      "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.css\" \"**/*.md\"",
    "precommit": "lint-staged && yarn run flow && yarn test",
    "prepush": "yarn run eslint && yarn run flow && yarn test",
    "test": "echo 'OK'"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css,md}": ["prettier --write", "git add"],
      "*.js": "eslint --cache"
    },
    "concurrent": false
  },
  "workspaces": ["packages/*"]
}
