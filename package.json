{
  "description": "A JavaScript bundler for node.js monorepo applications",
  "repository": "https://github.com/flegall/monopack.git",
  "author": "Florent Le Gall <florent.legall@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.5",
    "babel-jest": "23.2.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-stage-2": "6.24.1",
    "chalk": "2.4.1",
    "eslint": "5.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "12.0.0-alpha.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jest": "21.17.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-standard": "3.1.0",
    "flow-bin": "0.75.0",
    "flow-typed": "2.5.1",
    "glob": "7.1.2",
    "husky": "0.14.3",
    "jest": "23.3.0",
    "lerna": "2.11.0",
    "lint-staged": "7.2.0",
    "micromatch": "3.1.10",
    "mkdirp": "0.5.1",
    "prettier": "1.13.7",
    "string-length": "2.0.0"
  },
  "scripts": {
    "postinstall": "yarn build",
    "build": "node scripts/build.js",
    "watch": "node scripts/watch.js",
    "pretest": "yarn build",
    "test": "jest --verbose",
    "posttest": "yarn selfBuild",
    "preselfBuild": "yarn build",
    "selfBuild": "yarn monopack build ./packages/monopack/src/run-cli.js",
    "eslint": "eslint . --cache",
    "format": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.css\" \"**/*.md\"",
    "copyReadmes": "yarn lerna exec cp ../../README.md .",
    "precommit": "lint-staged && yarn run flow && yarn test",
    "prerelease": "yarn run eslint && yarn run flow && yarn test",
    "release": "yarn lerna publish"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css,md}": [
        "prettier --write",
        "git add"
      ],
      "*.js": "eslint --cache"
    },
    "concurrent": false
  },
  "workspaces": [
    "packages/*"
  ]
}
